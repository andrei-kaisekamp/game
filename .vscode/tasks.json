{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/Dependencies/glad/src/glad.c",
                "${workspaceFolder}/Dependencies/stb_image/stb_image.cpp",
                "${workspaceFolder}/classes/Globals.cpp",
                "${workspaceFolder}/classes/Sprite.cpp",
                "${workspaceFolder}/classes/Background.cpp",
                "${workspaceFolder}/classes/Magician.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}/Dependencies/stb_image",
                "-I${workspaceFolder}/Dependencies/glad/include",
                "-I${workspaceFolder}/classes",
                "-I${workspaceFolder}/Dependencies/glm",  
                "-I${workspaceFolder}/Dependencies/glfw-3.4.bin.WIN64/include",
                "-L${workspaceFolder}/Dependencies/glfw-3.4.bin.WIN64/lib-mingw-w64",  // Link para a lib do GLFW
                "-lglfw3",  // Biblioteca GLFW
                "-lopengl32",  // OpenGL
                "-lgdi32",  // Necess√°rio para sistemas Windows com GLFW
                "-L${workspaceFolder}/Dependencies/glad/src",  // Se houver lib para GLAD, adicione aqui
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}